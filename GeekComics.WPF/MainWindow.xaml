<Window
    x:Class="GeekComics.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:GeekComics.WPF.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GeekComics.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="1000"
    Height="600"
    AllowsTransparency="True"
    Background="Transparent"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <!--  Background Grid  -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border
                Width="220"
                Background="{StaticResource NavigationGradientBrush}"
                CornerRadius="25 0 0 25" />
            <Border
                Grid.Column="1"
                Background="{StaticResource ContentGradientBrush}"
                CornerRadius="0 25 25 0" />
        </Grid>
        <!--  Content Grid  -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <controls:NavigationBar Grid.Column="0" DataContext="{Binding Navigator}" />
            <ContentControl Grid.Column="1" Content="{Binding Navigator.CurrentViewModel}" />
        </Grid>
    </Grid>
</Window>
